{
  "name": "gaming-ui-a11y-toolkit",
  "version": "1.0.0",
  "description": "Une bibliothèque React de composants accessibles pour créer des interfaces de jeu inclusives avec support du clavier, de la souris et de la manette de jeu.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "react",
    "accessibility",
    "a11y",
    "gaming",
    "gamepad",
    "wcag",
    "ui",
    "components",
    "typescript",
    "keyboard-navigation",
    "screen-reader",
    "inclusive-design"
  ],
  "author": "Thomas Lebeau <thomaslebeau@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomaslebeau/gaming_ui_a11y_toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/thomaslebeau/gaming_ui_a11y_toolkit/issues"
  },
  "homepage": "https://github.com/thomaslebeau/gaming_ui_a11y_toolkit#readme",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "npm:rolldown-vite@7.2.2",
    "vite-plugin-dts": "^4.5.4"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
